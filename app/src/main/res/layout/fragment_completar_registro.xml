<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:windowBackground"
    android:gravity="center_horizontal"
    tools:context=".LoginFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="40dp"
                android:text="TwinT"
                android:textSize="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="40dp"
                android:paddingHorizontal="55dp"
                android:text="Bienvenido.\nVamos a comenzar con la información de tu perfil." />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Nombre (Mínimo 6 caracteres)" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Contraseña (Mínimo 6 caracteres)" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Edad" />

            <EditText
                android:id="@+id/et_edad"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento" />

            <DatePicker
                android:id="@+id/dt_picker"
                android:layout_width="226dp"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Sexo" />

            <Spinner
                android:id="@+id/sp_sexo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Pais" />

            <Spinner
                android:id="@+id/sp_pais"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Ocupación" />

            <Spinner
                android:id="@+id/sp_ocupacion"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Preferencia" />

            <Spinner
                android:id="@+id/sp_preferencia"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/bt_registrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Completar" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="Cerrar Sesión"
                android:textColor="@color/teal_700" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>