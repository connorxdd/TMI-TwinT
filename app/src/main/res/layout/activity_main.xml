<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8CD3FF"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="150dp"
        android:src="@drawable/tinder"
        android:layout_height="150dp" />
    <EditText
        android:id="@+id/etUser"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:hint="Nombre de usuario/ E-mail" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:hint="ContraseÃ±a" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Login" />

    <Button
        android:id="@+id/btVerPerfiles"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Ver Perfiles"
        />

    <Button
        android:id="@+id/btVerMenu"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Ver Menu" />

</LinearLayout>